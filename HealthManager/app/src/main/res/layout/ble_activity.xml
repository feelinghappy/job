<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ff000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
 >
    <com.hrg.healthmanager.tietlelayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textSize="20.0dip"
            android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:text="状态："
            />
        <TextView
            android:textSize="20.0dip"
            android:textColor="#ffffffff"
            android:id="@id/connect_state"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:textColor="#ffffffff"
                android:id="@id/btn_start"
                android:layout_width="0.0dip"
                android:layout_height="60.0dip"
                android:text="开始检测"
                android:layout_weight="1.0"
                />
            <Button
                android:textColor="#ffffffff"
                android:id="@id/btn_stop"
                android:layout_width="0.0dip"
                android:layout_height="60.0dip"
                android:text="停止检测"
                android:layout_weight="1.0"
                />
            <Button
                android:enabled="true"
                android:textColor="#ffffffff"
                android:id="@id/send_btn"
                android:layout_width="0.0dip"
                android:layout_height="60.0dip"
                android:text="查看结果" android:layout_weight="1.0" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

            <ImageView
                android:id="@id/compass_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:textSize="20.0dip"
            android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="能量分析指示：" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@id/layouts1"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0">
                <ImageView
                    android:id="@id/status1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3.0dip"
                    android:src="@drawable/s1"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </LinearLayout>

            <LinearLayout android:id="@id/layouts2"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0">
                <ImageView android:id="@id/status2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3.0dip"
                    android:src="@drawable/s2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </LinearLayout>
            <LinearLayout
                android:id="@id/layouts3"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0">
                <ImageView
                    android:id="@id/status3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3.0dip"
                    android:src="@drawable/s3"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@id/layouts4"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0">
                <ImageView
                    android:id="@id/status4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3.0dip"
                    android:src="@drawable/s4"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </LinearLayout>
            <LinearLayout
                android:id="@id/layouts5"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0">
                <ImageView
                    android:id="@id/status5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3.0dip"
                    android:src="@drawable/s5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </LinearLayout>
            <LinearLayout
                android:id="@id/layouts6"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@id/status6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3.0dip"
                    android:src="@drawable/s6"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>