        android:text="TextView"
        android:singleLine="false" />

    <TextView
        android:id="@id/tv_item4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        android:text="TextView"
        android:singleLine="false" />
</LinearLayout>