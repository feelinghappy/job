<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj"
    android:orientation="vertical"
    tools:context="com.hrg.anew.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/item_header"
            layout="@layout/header_item" />

        <LinearLayout
            android:layout_width="1280px"
            android:layout_height="690px"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/bjl"
                android:orientation="vertical"
                android:layout_width="250px"
                android:layout_height="690px">
                <android.support.v7.widget.AppCompatImageView
                    android:src = "@drawable/userlist"
                    android:layout_marginLeft="34px"
                    android:layout_width="172px"
                    android:layout_height="32px" />

                <ListView
                    android:listSelector="@drawable/selected"
                    android:id="@+id/list_user"
                    android:choiceMode="singleChoice"
                    android:layout_width="250px"
                    android:layout_height="574px"></ListView>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/add_new"
                    android:clickable="true"
                    android:layout_width="250px"
                    android:layout_height="84px"
                    android:src="@drawable/new_user" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15px"
                android:layout_marginTop="15px"
                android:layout_width="1000px"
                android:layout_height="660px"
                android:background="@drawable/bjr"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <include
                        android:id="@+id/item_userinfo_gap"
                        layout="@layout/userinfo_gap" />
                    <LinearLayout
                        android:layout_marginTop="20px"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="84px"
                            android:textSize="36px"
                            android:text="姓名："
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id ="@+id/username"
                            android:textSize="36px"
                            android:text="张三"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="120px"
                            android:textSize="36px"
                            android:text="年龄:"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="36px"
                            android:text="34岁"
                            android:textColor="#ffffff"
                            android:id ="@+id/userage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="84px"
                            android:textSize="36px"
                            android:text="身高："
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/userheight"
                            android:textSize="36px"
                            android:text="179cm"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="120px"
                            android:textSize="36px"
                            android:text="体重："
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/userweight"
                            android:textSize="36px"
                            android:text="85公斤"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="84px"
                            android:textSize="36px"
                            android:text="电话："
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/userphonenum"
                            android:textSize="36px"
                            android:text="15821426810"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="84px"
                            android:textSize="36px"
                            android:text="地址："
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/useraddress"
                            android:textSize="36px"
                            android:text="川桥路由度工坊"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/top_title"
                        android:layout_marginTop="60px"
                        android:layout_width="970px"
                        android:layout_height="45px">
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_marginLeft="30px"
                            android:src="@drawable/arrow"
                            android:layout_width="40px"
                            android:layout_height="40px" />

                        <TextView
                            android:layout_marginLeft="16px"
                            android:id="@+id/tvdetails"
                            android:textSize="36px"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:text="健康工具"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginLeft="30px"
                            android:layout_gravity="center"
                            android:layout_width="780px"
                            android:layout_height="2px"
                            android:background="#EEEEEE" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="50px"
                        android:layout_width="1000px"
                        android:layout_height="wrap_content"
                        >
                        <Button
                            android:background="@drawable/circle"
                            android:id="@+id/IntoTest_btn"
                            android:textColor="#FFFFFF"
                            android:layout_marginLeft="84px"
                            android:text="执行检测"
                            android:textSize="34px"
                            android:layout_width="128px"
                            android:layout_height="128px" />

                        <Button
                            android:textColor="#FFFFFF"
                            android:background="@drawable/circle"
                            android:id="@+id/Querry_btn"
                            android:layout_marginLeft="96px"
                            android:text="查看记录"
                            android:textSize="34px"
                            android:layout_width="128px"
                            android:layout_height="128px" />

                        <Button
                            android:textColor="#FFFFFF"
                            android:background="@drawable/circle"
                            android:id="@+id/Change_btn"
                            android:layout_marginLeft="96px"
                            android:text="数据修改"
                            android:textSize="34px"
                            android:layout_width="128px"
                            android:layout_height="128px" />

                        <Button
                            android:textColor="#FFFFFF"
                            android:background="@drawable/circle"
                            android:id="@+id/Delete_btn"
                            android:layout_marginLeft="96px"
                            android:text="用户删除"
                            android:textSize="34px"
                            android:layout_width="128px"
                            android:layout_height="128px" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>