<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E8E8E8"
    android:layout_width="640px"
    android:layout_height="800px"
    android:orientation="vertical"
    android:stretchColumns="1"
    >
    <LinearLayout
        android:layout_marginLeft="36px"
        android:layout_marginTop="20px"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
            <RadioButton
                android:button="@drawable/radio"
                android:textSize="34px"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectman"
                android:checked="true"
                android:text="男"
                 />
            <RadioButton
                android:button="@drawable/radio"
                android:layout_marginLeft="60px"
                android:textSize="34px"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectwuman"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34px"
            android:textColor="#666666"
            android:text="姓名:" />

        <EditText
            android:id="@+id/username"
            android:layout_width="454px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="景博文"
            android:textColor="#333333"
            android:textSize="34px"
            android:theme="@style/MyEditText" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34px"
            android:textColor="#666666"
            android:text="电话:" />

        <EditText
            android:id="@+id/usertel"
            android:layout_width="454px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="1115890-3434"
            android:textColor="#333333"
            android:textSize="34px"
            android:theme="@+style/MyEditText" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="34px"
            android:textColor="#666666"
            android:text="地址:" />
        <EditText
            android:theme="@style/MyEditText"
            android:layout_marginLeft="30px"
            android:layout_width="454px"
            android:id="@+id/useraddr"
            android:textColor="#333333"
            android:text="浦东川桥路由度工坊"
            android:layout_height="wrap_content"
            android:textSize="34px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="*体重(公斤):"
            android:textSize="34px"/>
        <EditText
            android:theme="@style/MyEditText"
            android:layout_marginLeft="30px"
            android:layout_width="328px"
            android:textSize="34px"
            android:id="@+id/userweight"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200px"
            android:textSize="34px"
            android:layout_height="wrap_content"
            android:text="*身高(cm):" />
        <EditText
            android:theme="@style/MyEditText"
            android:textSize="34px"
            android:layout_marginLeft="30px"
            android:layout_width="328px"
            android:id="@+id/userheight"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200px"
            android:textSize="34px"
            android:layout_height="wrap_content"
            android:text="*年龄(岁)：  " />
        <EditText
            android:theme="@style/MyEditText"
            android:layout_marginLeft="30px"
            android:layout_width="328px"
            android:id="@+id/userage"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="10px"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:textSize="26px"
            android:text="注意:带 * 选项为必填选项" />
         />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />
        <LinearLayout
            android:layout_marginBottom="36px"
            android:layout_marginRight="36px"
            android:layout_marginLeft="36px"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/login"
                android:layout_width="168px"
                android:layout_height="66px"
                android:background="@drawable/btn_bg"
                android:layout_marginBottom="0.0dip"
                android:text="确定"
                />
            <Button
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="130px"
                android:id="@+id/newuser_out"
                android:layout_width="168px"
                android:layout_height="66px"
                android:text="取消"
                 />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>