<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#E8E8E8"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.hrg.anew.tietlelayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:layout_width="970px"
        android:layout_height="45px"
      >
        <android.support.v7.widget.AppCompatImageView
            android:layout_marginLeft="30px"
            android:src="@drawable/arrow"
            android:layout_width="40px"
            android:layout_height="40px" />
        <TextView
            android:layout_marginLeft="16px"
            android:id="@+id/tvdetails"
            android:textSize="36px"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:textColor="#999999"
            android:text="用户信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="30px"
            android:layout_gravity="center"
            android:layout_width="1200px"
            android:layout_height="2px"
            android:background="#DFDFDF"  />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30px"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#444444"
                    android:textSize="32px"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:text="姓名：" />
                <TextView
                    android:textColor="#444444"
                    android:textSize="32px"
                    android:text="张三"
                    android:id="@+id/tex_username"
                    android:layout_width="150px"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#444444"
                    android:layout_marginLeft="50px"
                    android:textSize="32px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别：" />
                <TextView
                    android:textColor="#444444"
                    android:textSize="32px"
                    android:text="女"
                    android:id="@+id/tex_usersex"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#444444"
                    android:textSize="32px"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:text="年龄：" />
                <TextView
                    android:textColor="#444444"
                    android:textSize="32px"
                    android:text="28岁"
                    android:id="@+id/tex_userage"
                    android:layout_width="100px"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="40px"
                    android:textColor="#444444"
                    android:textSize="32px"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:text="身高：" />
                <TextView
                    android:textColor="#444444"
                    android:textSize="32px"
                    android:text="165cm"
                    android:id="@+id/tex_userheight"
                    android:layout_width="120px"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="40px"
                    android:textColor="#444444"
                    android:textSize="32px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体重：" />
                <TextView
                    android:textColor="#444444"
                    android:textSize="32px"
                    android:text="55公斤"
                    android:id="@+id/tex_userweight"
                    android:layout_width="100px"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="150px"
                    android:layout_marginRight="40px"
                    android:textSize="28px"
                    android:textColor="#444444"
                    android:id="@+id/tex_checkdate"
                    android:text="2015-05-05 09:34:58"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/top_title"
        android:layout_marginTop="30px"
        android:layout_width="970px"
        android:layout_height="45px"
        >
        <android.support.v7.widget.AppCompatImageView
            android:layout_marginLeft="30px"
            android:src="@drawable/arrow"
            android:layout_width="40px"
            android:layout_height="40px" />
        <TextView
            android:layout_marginLeft="16px"
            android:textSize="36px"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:textColor="#999999"
            android:text="查看科目"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="30px"
            android:layout_gravity="center"
            android:layout_width="1200px"
            android:layout_height="2px"
            android:background="#DFDFDF" />
    </LinearLayout>
    <ListView
        android:layout_marginLeft="30px"
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>