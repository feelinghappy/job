<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280px"
    android:orientation="vertical"
    android:background="@drawable/callbj"
    android:layout_height="800px">

    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150px"
        android:layout_width="188px"
        android:layout_height="188px"
        android:src="@drawable/pic" />

    <TextView
        android:id="@+id/txtName"
        android:visibility="visible"
        android:textSize="34px"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="爸爸" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:text="呼叫您进行视频通话..."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="34px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="70px"
        android:layout_marginBottom="118px"
        android:orientation="horizontal"
        android:layout_marginLeft="400px"
        android:layout_height="104px">
        <ImageView
            android:id="@+id/calling_reject"
            android:src="@drawable/turnoff"
            android:layout_width="104px"
            android:clickable="true"
            android:layout_height="104px" />
        <ImageView
            android:layout_marginLeft="280px"
            android:id="@+id/calling_accept"
            android:src="@drawable/connect"
            android:clickable="true"
            android:layout_width="104px"
            android:layout_height="104px" />

    </LinearLayout>

</LinearLayout>