<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/main_open_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="打开语音"
                android:textAllCaps="false"
                android:visibility="gone" />
            />

            <Button
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录（login）"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="绑定（bind）"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="解除绑定（unbind）"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="控制机器人（control）"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="解除控制(uncontrol)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登录(loginout)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="moveForward向前移动"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="moveBack向后移动"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="moveStop停止移动"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="query photo"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="robot info change register"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="robot info"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="robot list获取绑定机器人信息"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="query alarm"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add alarm"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updata alarm"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="remove alarm"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="speak to robot"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开启视屏聊天（videoCall）"
                android:textAllCaps="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/main_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
