<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="584px"
                android:layout_marginTop="20px"
                android:background="#f7f7f7">

                <ImageView
                    android:id="@+id/product_img_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/test_zhanweitu" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@android:color/white"
                android:paddingBottom="30px">

                <TextView
                    android:id="@+id/sales_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="38px"
                    android:layout_marginTop="30px"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/sales_txt_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sales_txt_name"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="38px"
                    android:layout_marginTop="20px"
                    android:text=""
                    android:textColor="@color/dark_gray"
                    android:textSize="32px" />
<!--机器人免费送！收到商品后立返1000太阳积分，剩余金额在24个月之内分期全部返还至您的付款账户，另送两年专业营养师指导服务。家庭健康全方位管理，让家人别再为慢性病担忧。-->
                <TextView
                    android:id="@+id/sales_txt_gc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sales_txt_desc"
                    android:layout_marginLeft="38px"
                    android:layout_marginTop="20px"
                    android:text="金额："
                    android:textColor="#21a9fb"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/sales_txt_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/sales_txt_gc"
                    android:layout_marginTop="30px"
                    android:layout_toRightOf="@id/sales_txt_gc"
                    android:text="4880"
                    android:textColor="#21a9fb"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/sales_txt_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sales_txt_desc"
                    android:layout_marginLeft="38px"
                    android:layout_marginTop="20px"
                    android:text="备货中..."
                    android:textColor="#c7c7cc"
                    android:textSize="32px"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/sales_txt_bp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/sales_txt_gc"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="38px"
                    android:layout_marginTop="30px"
                    android:text="赠送积分："
                    android:textColor="@color/dark_gray"
                    android:textSize="28px"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/product_relative_specific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <TextView
                    android:id="@+id/txt_goods_spec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38px"
                    android:text="规格数量选择"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <ImageView
                    android:layout_width="16px"
                    android:layout_height="26px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_size_24"
                    android:src="@mipmap/mine_jiantou_img" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:paddingBottom="20px">

                <TextView
                    android:id="@+id/sales_txt_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38px"
                    android:layout_marginTop="16px"
                    android:text="服务"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/sales_txt_service1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sales_txt_service"
                    android:layout_marginLeft="38px"
                    android:layout_marginTop="24px"
                    android:drawableLeft="@mipmap/ic_hint_service"
                    android:drawablePadding="20px"
                    android:text=""
                    android:visibility="gone"/>
                    android:text="全国包邮闪电发货" />

                <TextView
                    android:id="@+id/sales_txt_service2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sales_txt_service"
                    android:layout_marginLeft="375px"
                    android:layout_marginTop="24px"
                    android:drawableLeft="@mipmap/ic_hint_service"
                    android:drawablePadding="20px"
                    android:text=""
                    android:visibility="gone"/>
                    android:text="专业医师在线指导" />

                <TextView
                    android:id="@+id/sales_txt_service3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sales_txt_service1"
                    android:layout_marginLeft="38px"
                    android:layout_marginTop="24px"
                    android:drawableLeft="@mipmap/ic_hint_service"
                    android:drawablePadding="20px"
                    android:text=""
                    android:visibility="gone"/>
                    android:text="两年后返还押金" />

                <TextView
                    android:id="@+id/sales_txt_service4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sales_txt_service1"
                    android:layout_marginLeft="375px"
                    android:layout_marginTop="24px"
                    android:drawableLeft="@mipmap/ic_hint_service"
                    android:drawablePadding="20px"
                    android:text=""
                    android:visibility="gone"/>
                    android:text="云端大数据监控指导" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="30px"
                android:paddingBottom="30px">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:background="@color/light_gray5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="产品详情"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="38px"
                    android:layout_weight="1"
                    android:background="@color/light_gray5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sales_ll_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="30px">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:background="@color/light_gray5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="详细参数"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="38px"
                    android:layout_weight="1"
                    android:background="@color/light_gray5" />

            </LinearLayout>

            <com.longcai.medical.ui.view.ListViewForScrollView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:divider="@null"
                android:layout_marginBottom="20px"
                android:paddingBottom="20px" />


            <ImageView
                android:id="@+id/sales_robot_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginBottom="20px"/>
            <!--<ImageView-->
                <!--android:id="@+id/sales_robot_detail"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scaleType="fitXY"-->
                <!--android:layout_marginBottom="20px"/>-->
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/sales_linear_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sales_img_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38px"
                android:src="@mipmap/ic_service" />

            <TextView
                android:id="@+id/sales_txt_contact_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="联系客服"
                android:textColor="@color/black"
                android:textSize="26px" />
        </LinearLayout>

        <Button
            android:id="@+id/sales_btn_submit"
            android:layout_width="270px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_pay_bg_selector"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@android:color/white"
            android:textSize="37px" />
    </RelativeLayout>
</LinearLayout>