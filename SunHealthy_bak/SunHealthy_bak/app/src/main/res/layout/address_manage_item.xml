<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_size_36"
            android:paddingRight="@dimen/text_size_20">

            <TextView
                android:id="@+id/address_manage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_30"
                android:text="张全蛋"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/address_manage_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/text_size_30"
                android:text="127437287"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/address_manage_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_manage_name"
                android:layout_marginBottom="@dimen/text_size_20"
                android:layout_marginTop="@dimen/text_size_20"
                android:text="北京市朝阳市xxxxxxxxxxxxxxxx"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/layout1"
            android:background="@color/fg_line" />

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_below="@+id/line1">

            <LinearLayout
                android:id="@+id/checkbox_layou"
                android:layout_width="wrap_content"
                android:layout_height="88px"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingRight="@dimen/text_size_30">

                <CheckBox
                    android:id="@+id/address_manage_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="38px"
                    android:clickable="false"
                    android:background="@null"
                    android:button="@drawable/pay_way_selector2"
                    android:checked="false" />

                <TextView
                    android:id="@+id/address_manage_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18px"
                    android:text="设为默认"
                    android:textColor="@color/black"
                    android:textSize="26px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_manage_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/delete_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/text_size_14"
                    android:layout_toLeftOf="@+id/delete"
                    android:src="@mipmap/shanchu2x" />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/text_size_20"
                    android:text="@string/delete1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_30" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_manage_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/text_size_24"
                android:layout_toLeftOf="@+id/address_manage_delete"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/text_size_14"
                    android:layout_toLeftOf="@+id/edit"
                    android:src="@mipmap/bianji2x" />

                <TextView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_30" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_20"/>
</LinearLayout>