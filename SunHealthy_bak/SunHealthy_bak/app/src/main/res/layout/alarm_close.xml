<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="532px"
        android:layout_height="172px"
        android:background="@drawable/sport_over_bkg"
        android:tag="(532,172)"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/alarm_close_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间到了，取消提醒"
            android:layout_marginBottom="20px"
            android:textSize="28px"
            android:tag="(28){0,0,0,20}"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="460px"
            android:layout_height="2px"
            android:tag="(0,2)"
            android:background="@color/person_view_line"></View>

        <Button
            android:id="@+id/alarm_close_btn"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="@null"
            android:text="确定"
            android:textSize="28px"
            android:gravity="center"
            android:layout_marginTop="20px"
            android:textColor="@color/appColor2"
            android:tag="(0,40,28){0,20,0,0}"
            />

    </LinearLayout>

</LinearLayout>