<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--family_popup_family_add
    family_popup_family_establish-->
    <LinearLayout
        android:layout_width="188px"
        android:layout_height="176px"
        android:layout_marginRight="20px"
        android:background="@mipmap/fammily_menu"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/family_popup_family_establish"
            android:layout_width="match_parent"
            android:layout_height="82px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28px"
                android:layout_height="28px"
                android:src="@mipmap/pop_add_family" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pop_create"
                android:layout_marginLeft="7px"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30"/>

        </LinearLayout>

        <View
            android:id="@+id/horizontal_line_top"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eeeeee"/>
        <LinearLayout
            android:id="@+id/family_popup_family_add"
            android:layout_width="match_parent"
            android:layout_height="76px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28px"
                android:layout_height="28px"
                android:src="@mipmap/pop_establish_family" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pop_join"
                android:layout_marginLeft="7px"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>