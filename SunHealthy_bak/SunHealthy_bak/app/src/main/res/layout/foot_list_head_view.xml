<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efefef"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54px"
            android:tag="(0,54)">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="26px"
                android:tag="(28){26,0,0,0}"
                android:text="推荐食材"
                android:textColor="@color/center_text_back"
                android:textSize="28px" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend_list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/more_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerVertical="true"
                android:background="@color/food_second_line_bkg"
                android:tag="(0,2)" />

            <TextView
                android:id="@+id/food_more_tx"
                android:layout_width="186px"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#efefef"
                android:gravity="center_horizontal"
                android:tag="(186,0,25)"
                android:text="收起所有食材"
                android:textColor="@color/sport_tx1"
                android:textSize="25px" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>