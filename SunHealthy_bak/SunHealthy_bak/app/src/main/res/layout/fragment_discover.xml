<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar"></include>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/discover_diet"
        style="@style/discover_item"
        android:layout_marginTop="@dimen/text_size_24">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/text_size_40"
            android:layout_height="@dimen/text_size_40"
            android:layout_marginLeft="@dimen/text_size_30"
            android:layout_marginRight="@dimen/text_size_20"
            android:src="@mipmap/icon_diet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv1"
            android:text="@string/diet"
            android:textSize="@dimen/text_size_32"
            android:textColor="@color/dark_gray2"
            android:id="@+id/textView2" />

        <ImageView
            android:layout_width="@dimen/text_size_14"
            android:layout_height="@dimen/text_size_22"
            android:layout_marginRight="@dimen/text_size_20"
            android:src="@mipmap/icon_right"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/discover_motion"
        style="@style/discover_item"
        android:layout_marginTop="@dimen/text_size_20"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="@dimen/text_size_40"
            android:layout_height="@dimen/text_size_40"
            android:layout_marginLeft="@dimen/text_size_30"
            android:layout_marginRight="@dimen/text_size_20"
            android:src="@mipmap/icon_motion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv2"
            android:text="@string/motion"
            android:textColor="@color/dark_gray2"
            android:textSize="@dimen/text_size_32" />

        <ImageView
            android:layout_width="@dimen/text_size_14"
            android:layout_height="@dimen/text_size_22"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_size_20"
            android:src="@mipmap/icon_right" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/discover_lecture"
        style="@style/discover_item"
        android:layout_marginTop="@dimen/text_size_20">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="@dimen/text_size_40"
            android:layout_height="@dimen/text_size_40"
            android:layout_marginLeft="@dimen/text_size_30"
            android:layout_marginRight="@dimen/text_size_20"
            android:src="@mipmap/icon_lecture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv3"
            android:text="@string/lecture"
            android:textColor="@color/dark_gray2"
            android:textSize="@dimen/text_size_32" />

        <ImageView
            android:layout_width="@dimen/text_size_14"
            android:layout_height="@dimen/text_size_22"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_size_20"
            android:src="@mipmap/icon_right" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>