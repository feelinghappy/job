<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mine_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_health_advert"
        android:layout_width="match_parent"
        android:layout_height="460px"
        android:background="@android:color/white"
        android:visibility="visible">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_health_advert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/home_top"/>

        <LinearLayout
            android:id="@+id/ll_advert_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20px"
            android:orientation="horizontal" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_advert_placeholder"
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:background="@mipmap/home_top"
        android:scaleType="fitXY"
        android:tag="(0,360)"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="178px"
        android:layout_marginTop="20px"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_robot"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="50px"
                android:text="机器人"
                android:textColor="@color/black"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="117px"
                android:text="贴心医疗助手"
                android:textColor="@color/grey"
                android:textSize="24px" />

            <ImageView
                android:layout_width="104px"
                android:layout_height="104px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@mipmap/icon_robot" />

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/fg_line" />

        <RelativeLayout
            android:id="@+id/rl_report"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="50px"
                android:text="健康档案"
                android:textColor="@color/black"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="117px"
                android:text="实时反馈信息"
                android:textColor="@color/grey"
                android:textSize="24px" />

            <ImageView
                android:layout_width="104px"
                android:layout_height="104px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@mipmap/icon_report" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="20px"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/top_iv"
            android:layout_width="6px"
            android:layout_height="26px"
            android:layout_marginLeft="@dimen/text_size_30"
            android:src="@mipmap/lanse_jiangexian"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/top_iv"
            android:layout_centerVertical="true"
            android:text="健康指数"
            android:textColor="@color/black"
            android:textSize="28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/mine_bg"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="269px">

        <RelativeLayout
            android:id="@+id/rl_health_banner"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:background="@android:color/white">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_health_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/ll_health_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_dot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dot_selected" />

                <ImageView
                    android:id="@+id/iv_dot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/dot_default" />

                <ImageView
                    android:id="@+id/iv_dot3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/dot_default" />

                <ImageView
                    android:id="@+id/iv_dot4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/dot_default" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_below="@+id/rl_health_banner"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/fg_line"/>
        <LinearLayout
            android:id="@+id/ll_health_watch_data"
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:layout_below="@id/rl_health_banner"
            android:layout_marginTop="1px"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_map"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/icon_map"
                    android:drawablePadding="24px"
                    android:gravity="center"
                    android:text="手表定位"
                    android:textColor="@color/mine_tx_color"
                    android:textSize="28px" />

            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/fg_line" />

            <RelativeLayout
                android:id="@+id/rl_history"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/icon_history"
                    android:drawablePadding="24px"
                    android:gravity="center"
                    android:text="历史记录"
                    android:textColor="@color/mine_tx_color"
                    android:textSize="28px" />
            </RelativeLayout>

        </LinearLayout>

                    <TextView
                        android:id="@+id/tv_data_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#60000000"
                        android:gravity="center"
                        android:textSize="30px"
                        android:textColor="@color/white"
                        android:text="绑定穿戴设备就能查看实时健康数据啦\n快来绑定吧"/>
                </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info_read"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="20px"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/top_iv3"
            android:layout_width="6px"
            android:layout_height="26px"
            android:layout_marginLeft="@dimen/text_size_30"
            android:src="@mipmap/lanse_jiangexian"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/top_iv3"
            android:text="推荐阅读"
            android:textColor="@color/black"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/next_info_read"
            android:layout_width="16px"
            android:layout_height="26px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_size_30"
            android:src="@mipmap/mine_jiantou_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/next_info_read"
            android:layout_marginRight="20px"
            android:textSize="26px"
            android:text="查看更多"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/mine_bg"/>
    </RelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
