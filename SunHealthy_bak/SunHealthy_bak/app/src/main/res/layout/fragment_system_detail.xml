<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar"></include>

    <LinearLayout
        android:layout_below="@+id/title_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/text_size_28"
        android:paddingBottom="@dimen/text_size_30"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_system_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_32"
            android:layout_marginTop="@dimen/text_size_24"
            android:layout_marginLeft="@dimen/text_size_28"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_24"
            android:layout_marginLeft="@dimen/text_size_28"
            android:textSize="@dimen/text_size_24"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_system_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_24"
            android:layout_marginLeft="@dimen/text_size_38"
            android:textColor="@color/black"
            android:layout_marginRight="60px"
            android:lineSpacingMultiplier="1.2"/>
        <Button
            android:id="@+id/btn_family_agree"
            android:layout_width="250px"
            android:layout_height="88px"
            android:text="@string/apply_sale_tv2"
            android:textSize="@dimen/text_size_32"
            android:textColor="@color/white"
            android:layout_marginTop="128px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_corner_blue_message"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>