<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/order_item_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_chuku_layout1"
        android:layout_marginTop="@dimen/text_size_20"
        android:layout_marginBottom="@dimen/text_size_20">
        <ImageView
            android:id="@+id/order_item_iv1"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="@dimen/text_size_36"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiaohuobao" />
        <TextView
            android:id="@+id/order_item_name2"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_36"
            android:layout_toRightOf="@+id/order_item_iv1"
            android:layout_marginTop="@dimen/text_size_20"
            android:text="太阳家族小火宝"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_32"
            android:layout_marginBottom="@dimen/text_size_20"/>

        <ImageView
            android:id="@+id/order_item_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_size_36"
            android:src="@mipmap/saomaruku" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/mine_bg"/>
</LinearLayout>