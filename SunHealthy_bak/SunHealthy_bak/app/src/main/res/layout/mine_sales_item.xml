<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mine_sales_item_iv"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_marginLeft="124px"
        android:layout_marginTop="@dimen/text_size_60"
        android:src="@mipmap/xiadan" />

    <TextView
        android:id="@+id/mine_sales_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mine_sales_item_iv"
        android:layout_alignLeft="@+id/mine_sales_item_iv"
        android:layout_alignRight="@+id/mine_sales_item_iv"
        android:layout_alignStart="@+id/mine_sales_item_iv"
        android:layout_below="@+id/mine_sales_item_iv"
        android:layout_marginBottom="@dimen/text_size_60"
        android:layout_marginTop="@dimen/text_size_20"
        android:gravity="center_horizontal"
        android:text="下单"
        android:textSize="@dimen/text_size_28"/>
</RelativeLayout>