<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/minesport_layou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/minesport_item_bkg"
        android:tag="{20,0,20,0}">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sport_img"
            android:layout_width="match_parent"
            android:layout_height="219px"
            android:background="@drawable/minesport_item_bkg"
            android:tag="(0,219)"
            fresco:placeholderImage="@mipmap/zw01"
            fresco:placeholderImageScaleType="fitCenter" />

        <ImageView
            android:id="@+id/sport_right"
            android:layout_width="52px"
            android:layout_height="52px"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30px"
            android:layout_marginTop="84px"
            android:src="@mipmap/sport_item_right"
            android:tag="(52,52){0,84,30,0}" />

        <RelativeLayout
            android:id="@+id/minesport_alpha"
            android:layout_width="125px"
            android:layout_height="125px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="88px"
            android:background="@drawable/sport_item_left_bkg"
            android:tag="(125,125){10,88,0,0}">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/minesport_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:tag="(24)"
                    android:text="晨练"
                    android:textColor="#252623"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/minesport_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:tag="(24)"
                    android:text="30分钟"
                    android:textColor="#252623"
                    android:textSize="24px" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/minesport_layout"
            android:layout_width="match_parent"
            android:layout_height="66px"
            android:layout_below="@+id/sport_img"
            android:tag="(0,66)">

            <ImageView
                android:id="@+id/star_sport_img"
                android:layout_width="42px"
                android:layout_height="42px"
                android:layout_marginLeft="19px"
                android:src="@drawable/sport_info_img"
                android:tag="(42,42){19,0,0,0}"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/sport_tx"
                android:layout_toEndOf="@+id/sport_tx" />

            <TextView
                android:id="@+id/sport_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="(23)"
                android:text="恭喜您，已完成目标"
                android:textColor="#252525"
                android:textSize="23px"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:tag="(0,40)"></LinearLayout>

</LinearLayout>