<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/person_information_head_layout"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="@dimen/text_size_28"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_30"
            android:text="@string/head"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_32" />

        <ImageView
            android:id="@+id/person_information_head"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_size_28"
            android:layout_toLeftOf="@+id/person_information_right"
            android:src="@mipmap/head2x" />

        <ImageView
            android:id="@+id/person_information_right"
            android:layout_width="18px"
            android:layout_height="31px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_size_20"
            android:src="@mipmap/mine_jiantou_img" />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line_ca" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_30"
            android:text="@string/person"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_32" />

        <TextView
            android:id="@+id/person_information_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="218px"
            android:layout_marginRight="@dimen/text_size_30"
            android:text="18810639952"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_30" />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line_ca" />

    <RelativeLayout
        android:id="@+id/person_information_layout3"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white"
        android:clickable="true"
        android:descendantFocusability="afterDescendants">

        <TextView
            android:id="@+id/person_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_30"
            android:text="@string/nickcheng"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_32" />

        <TextView
            android:id="@+id/person_information_name"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/person_tv3"
            android:layout_height="match_parent"
            android:paddingLeft="200px"
            android:paddingRight="@dimen/text_size_28"
            android:layout_toLeftOf="@+id/person_information_right2"
            android:background="@null"
            android:clickable="true"
            android:cursorVisible="false"
            android:duplicateParentState="true"
            android:gravity="right|center_vertical"
            android:hint="@string/name"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_30" />

        <ImageView
            android:id="@+id/person_information_right2"
            android:layout_width="18px"
            android:layout_height="31px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_size_20"
            android:src="@mipmap/mine_jiantou_img" />
    </RelativeLayout>
</LinearLayout>