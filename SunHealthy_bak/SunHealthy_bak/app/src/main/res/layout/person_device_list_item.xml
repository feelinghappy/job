<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:background="@mipmap/device_bg_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/person_device_list_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_40"
            android:src="@mipmap/icon_jiqiren" />

        <TextView
            android:id="@+id/person_device_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_24"
            android:layout_toRightOf="@+id/person_device_list_iv"
            android:text="小火宝"
            android:textSize="@dimen/text_size_32"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/person_device_list_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_22"
            android:paddingRight="@dimen/text_size_40"
            android:src="@mipmap/unbind_device"
            android:textSize="@dimen/text_size_24"
            android:focusable="false"
            android:textColor="@color/black" />
    </RelativeLayout>

</RelativeLayout>