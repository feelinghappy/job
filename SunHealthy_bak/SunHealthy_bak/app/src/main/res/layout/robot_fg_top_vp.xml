<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="11dp">

    <ImageView
        android:id="@+id/robot_top_right_iv"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/robot_topvp_all_backg"
        android:layout_width="684px"
        android:layout_height="280px"
        android:layout_centerInParent="true">

        <!-- 没有绑定机器人 -->
        <ImageView
            android:id="@+id/robot_top_add_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/robot_nobind"
            android:visibility="gone" />

        <!-- 绑定了机器人 -->
        <RelativeLayout
            android:id="@+id/robot_top_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/apply_sales_bkg2"
            android:visibility="visible">

            <ImageView
                android:id="@+id/robot_avatar"
                android:layout_width="140px"
                android:layout_height="140px"
                android:layout_marginLeft="@dimen/text_size_34"
                android:layout_marginTop="@dimen/text_size_34"
                android:src="@mipmap/jiqiren" />

            <!--android:layout_below="@id/robot_top_rl_uid"-->
            <TextView
                android:id="@+id/robot_top_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/text_size_30"
                android:layout_marginTop="64px"
                android:layout_toRightOf="@+id/robot_avatar"
                android:text="幸福一家"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/robot_top_robot_imei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/text_size_30"
                android:layout_marginTop="@dimen/text_size_30"
                android:layout_toRightOf="@+id/robot_avatar"
                android:text="编号：asfaf445dfgs52"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/robot_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/text_size_34"
                android:layout_marginBottom="@dimen/text_size_20"
                android:textColor="@color/theme_blue"
                android:textSize="30px"/>

            <ImageView
                android:id="@+id/robot_top_conversation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/robot_video"
                android:layout_marginRight="@dimen/text_size_20"
                android:layout_marginBottom="@dimen/text_size_20"/>


            <ImageView
                android:id="@+id/robot_top_monitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/robot_top_conversation"
                android:src="@mipmap/robot_monitor"
                android:layout_marginRight="@dimen/text_size_20"
                android:layout_marginBottom="@dimen/text_size_20"/>
