<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homepage_gray_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/food_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:visibility="gone">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/food_view01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26px"
                    android:text="推荐食材"
                    android:textColor="@color/center_text_back"
                    android:textSize="28px" />
            </RelativeLayout>


            <GridView
                android:id="@+id/recommend_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="auto_fit"
                android:columnWidth="90dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:scrollbars="none">

            </GridView>

            <RelativeLayout
                android:id="@+id/more_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:background="@color/food_second_line_bkg"/>

                <TextView
                    android:id="@+id/foodMoreTx2"
                    android:layout_width="186px"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="#efefef"
                    android:gravity="center_horizontal"
                    android:text="显示所有食材"
                    android:textColor="@color/sport_tx1"
                    android:textSize="25px" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>