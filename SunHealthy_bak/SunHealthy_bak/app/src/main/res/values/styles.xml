<resources>
    <style name="AnimationAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/AnimationTheme</item>
    </style>
    <!--设置activity切换动画-->
    <style name="AnimationTheme" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
        <!--<item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>-->

    </style>
    <!--状态栏-->
    <style name="ImageTranslucentTheme" parent="AppTheme">
        <item name="android:fitsSystemWindows">true</item>
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--底部切换按钮-->
    <style name="Bottom_Tab_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/txt_tab_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="DividingLine">
        <item name="android:background">#e1e1e1</item>
    </style>

    <style name="style_tv_video">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="robot_binding_have_ll">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">23dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="TextviewPadding" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="robot_bottom_bpm" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Animation.Popup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="TabLayout_Text" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">40px</item>
    </style>

    <style name="Animation.CustomPopup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_marquee_in</item>
        <item name="android:windowExitAnimation">@anim/anim_marquee_out</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="PopupWindowStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <!--发现页面的item-->
    <style name="discover_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_size_100</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <dimen name="text_size_20">20px</dimen>

    <style name="progress_horizontal_custom">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_custom
        </item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ActivityPushStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityPush</item>
    </style>

    <style name="ActivityPush" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/theme_blue</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabSelectedTextColor">@color/theme_blue</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>

    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="watch_text_32">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">33dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="watch_text_24">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">33dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

</resources>
