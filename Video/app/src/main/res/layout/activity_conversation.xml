<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wilddog.video.base.WilddogVideoViewLayout
            android:id="@+id/remote_video_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wilddog.video.base.WilddogVideoView
                android:id="@+id/remote_video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.wilddog.video.base.WilddogVideoViewLayout>

        <com.wilddog.video.base.WilddogVideoViewLayout
            android:id="@+id/local_video_layout"
            android:layout_width="320px"
            android:layout_height="200px">

            <com.wilddog.video.base.WilddogVideoView
                android:id="@+id/local_video_view"
                android:layout_width="320px"
                android:layout_height="200px" />
        </com.wilddog.video.base.WilddogVideoViewLayout>
        <TextView
            android:id="@+id/btn_user_id"
            android:text="aaaa"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
         <Button
             android:id="@+id/btn_user_list"
             android:text="用户列表"
             android:textSize="30px"
             android:clickable="true"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="410px"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btn_invite_cancel"
            android:layout_width="88px"
            android:layout_height="88px"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="480px"
            android:src="@drawable/turnoff" />



    </FrameLayout>

</LinearLayout>